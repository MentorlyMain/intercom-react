{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2016",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "build",
    "declaration": true
  },
  "exclude": ["node_modules"]
}
